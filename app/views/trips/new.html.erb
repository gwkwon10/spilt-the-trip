<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all" %>

<div class="container py-5">
  <h1 class="text-center text-primary fw-bold mb-4">Create a New Trip</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with model: @trip, url: trips_path, method: :post, data: { turbo: false }, local: true, class: "w-75 mx-auto" do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Trip Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter the name of your trip", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :startDate, "Start Date", class: "form-label" %>
      <%= f.date_field :startDate, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :endDate, "End Date", class: "form-label" %>
      <%= f.date_field :endDate, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :traveler_emails, "Participants", class: "form-label" %>
      <%= f.text_field :traveler_emails, class: "form-control", placeholder: "Enter participant emails (comma separated)"%>
    </div>

    <div class="mb-3">
      <%= f.label :defaultCurrency, "Default Currency", class: "form-label" %>
      <%= f.select :defaultCurrency, options_for_select([['USD', 'USD'], ['EUR', 'EUR'], ['JPY', 'JPY']]), {}, class: "form-select", required: true %>
    </div>

    <%= f.submit "Create Trip", class: "btn btn-primary w-100" %>
  <% end %>
</div>
