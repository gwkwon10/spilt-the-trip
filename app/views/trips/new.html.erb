#but it's in carmen-->

<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all", "data-turbo-track": "reload" %>

<div class="container py-5">
  <h1 class="text-center mb-4">Create a New Trip</h1>

  <%= form_with model: @trip, local: true, class: "form-container" do |form| %>
    <% if @trip.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @trip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, "Trip Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter the name of the trip" %>
    </div>

    <div class="mb-3">
      <%= form.label :start_date, "Start Date", class: "form-label" %>
      <%= form.date_select :start_date, start_year: Time.now.year, end_year: Time.now.year + 5, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :end_date, "End Date", class: "form-label" %>
      <%= form.date_select :end_date, start_year: Time.now.year, end_year: Time.now.year + 5, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :participants, "Participants", class: "form-label" %>
      <%= form.collection_check_boxes :participant_ids, User.all, :id, :name, {class: "form-check-input"} do |b| %>
        <div class="form-check">
          <%= b.check_box class: "form-check-input" %>
          <%= b.label class: "form-check-label" %>
        </div>
      <% end %>
    </div>

    <div class="d-grid">
      <%= form.submit "Create Trip", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>