<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all", "data-turbo-track": "reload" %>

<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-primary"><%= @trip.name %></h1>
    <%= link_to "Back to Trips", trips_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="card shadow-sm border-primary border-2">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">
        <%= @trip.startDate.strftime("%b %d") %> - <%= @trip.endDate.strftime("%b %d, %Y") %>
      </h5>
    </div>

    <div class="card-body">
      <div class="mb-3">
        <span class="badge bg-info text-dark me-2">
          <%= pluralize(@trip.users.count, "participant") %>
        </span>
        <span class="badge bg-success-subtle text-success">
        <% if @trip.expenses.count.zero? %>
            No expenses
        <% else %>
            <%= "#{@trip.expenses.count} expenses" %>
        <% end %>
        </span>
      </div>

      <% if @trip.expenses.any? %>
        <p class="fw-semibold text-muted">
          Total Spent: <%= number_to_currency(@trip.expenses.sum(:amount)) %>
        </p>
      <% end %>

      <% if @trip.users.any? %>
        <h5 class="fw-bold">Participants</h5>
        <div class="d-flex align-items-center gap-2 mb-4">
          <% @trip.users.each do |users| %>
            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center border border-white"
              style="width: 40px; height: 40px; font-size: 16px;">
              <%= users.displayName.upcase %>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @trip.expenses.any? %>
        <h5 class="fw-bold">Expenses</h5>
        <ul class="list-group mb-4">
          <% @trip.expenses.each do |expense| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= expense.description %>
              <span class="badge bg-primary rounded-pill"><%= number_to_currency(expense.amount) %></span>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
