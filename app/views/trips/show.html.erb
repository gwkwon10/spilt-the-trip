<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all", "data-turbo-track": "reload" %>
<%
conversion_rates = {
    "USD" => {"EUR" => 0.88, "JPY" => 142, "USD" => 1},
    "EUR" => {"USD" => 1.14, "JPY" => 162, "EUR" => 1},
    "JPY" => {"USD" => 0.0070, "EUR" => 0.0062, "JPY" => 1}}

    def convert_currency(amount, from, to, rates)
      if from == to
        return amount 
      else
        return amount * rates[from][to]
      end
    end
%>

<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-bold text-primary"><%= @trip.name %></h1>
    <%= link_to "Back to Trips", trips_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="card shadow-sm border-primary border-2">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">
        <%= @trip.startDate.strftime("%b %d") %> - <%= @trip.endDate.strftime("%b %d, %Y") %>
      </h5>
    </div>

    <div class="card-body">
      <div class="mb-3">
        <span class="badge bg-info text-dark me-2">
          <%= pluralize(@travelers.count, "participant") %>
        </span>
        <span class="badge bg-success-subtle text-success">
        <% if @trip.expenses.count.zero? %>
            No expenses
        <% else %>
            <%= "#{@trip.expenses.count} expenses" %>
        <% end %>
        </span>
      </div>

      <% if @trip.expenses.any? %>
        <p class="fw-semibold text-muted">
          Total Spent: <%= number_to_currency(@trip.expenses.sum(:amount)) %>
        </p>
      <% end %>

      <% if @travelers.any? %>
        <h5 class="fw-bold">Participants</h5>
        <div class="d-flex align-items-center gap-2 mb-4">
          <% @travelers.each do |users| %>
            <div >
              <%= users.displayName.upcase %> - Balance: 
              <%= number_to_currency(OnTrip.find_by(user_id: users.id, trip_id: @trip.id)&.balance || 0) %>
            </div>
          <% end %>
        </div>
      <% end %>
      <div class="d-flex justify-content-between mb-3">
        <%= link_to "Add Expense", new_trip_expense_path(@trip), class: "btn btn-outline-secondary" %>
      </div>
      <%= form_with url: update_default_currency_trip_path(@trip), method: :patch, local: true, scope: :trip do |form| %>
        <div class="mb-3">
          <%= form.label :defaultCurrency, "Currency", class: "form-label" %>
          <%= form.select :defaultCurrency, options_for_select(["USD", "EUR", "JPY"], @trip.defaultCurrency)%>
          <%= form.submit "Convert", class: "btn btn-primary" %>
        </div>
      <% end %>

      <p>Trip currency: <strong><%= @trip.defaultCurrency %></strong></p>

      </div>

      <% if @trip.expenses.any? %>
        <ul class="list-group mb-4">
          <% @trip.expenses.each do |expense| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <%= expense.desc? ? expense.desc : "Unnamed" %>:
                <%= expense.date.present? ? expense.date.strftime("%B %d, %Y") : "No date"%>
              </div>
              <div>
                People:
                <%= expense.liables.map { |liable| liable.user.displayName }.join(", ") %>
              </div>
              <% converted_amount = convert_currency(expense.amount || 0, expense.currency, @trip.defaultCurrency, conversion_rates) %>
              <span class="badge bg-primary rounded-pill"><%= number_to_currency(converted_amount, unit: "#{@trip.defaultCurrency} ") %></span>
              <span class="badge bg-primary rounded-pill"><%= link_to "Edit Expense", edit_trip_expense_path(@trip, expense) %></span>
              <span class="badge bg-primary rounded-pill"><%= button_to "Delete Expense", trip_expense_path(@trip, expense), method: :delete, data: { confirm: "Are you sure?" } %></span>
            </li>
          <% end %>
        </ul>
        <br>
        <h5 class="fw-bold">Who Owes What</h5>
        <% if @owe.any? %>
          <ul class="list-group mb-4">
            <% @owe.each do |expense| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= expense.userOwing.displayName %> â†’ <%= expense.userOwed.displayName %>: $<%= '%.2f' % expense.amountOwed %>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
