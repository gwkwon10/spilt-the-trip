<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all" %>

<div class="container text-center py-5">
  <h1 class="display-4 text-primary fw-bold">Welcome to Split the Bill</h1>
  <p class="lead text-muted mb-5">Track shared trip expenses with ease.</p>

  <div class="d-flex justify-content-center gap-3">
    <%= link_to "Create a Trip", new_trip_path, class: "btn btn-primary btn-lg" %>
    <%= link_to "View Your Trips", trips_path, class: "btn btn-outline-primary btn-lg" %>
  </div>

  <hr class="my-5" />

  <p class="text-muted">
    Want to save your trips? <%= link_to "Sign up", "#" %> or <%= link_to "Log in", "#" %>.
  </p>
</div>
