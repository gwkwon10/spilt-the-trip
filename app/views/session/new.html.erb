<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all", "data-turbo-track": "reload" %>

<!-- Login Page Layout -->
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card p-4" style="max-width: 400px; width: 100%;">
    <div class="card-header text-center bg-primary text-white">
      <h4>Login to Your Account</h4>
    </div>
    <div class="card-body">
      <%= form_with url: "#", method: "post", local: true do |form| %>
        <div class="mb-3">
          <%= form.label :email, "Email Address", class: "form-label" %>
          <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit "Login", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <%= link_to "Forgot password?", "#", class: "text-muted" %>
    </div>
  </div>
</div>
