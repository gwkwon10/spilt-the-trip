<%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", media: "all" %>

<div class="container py-5">
  <h1 class="text-center text-primary fw-bold mb-4">Log In</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with url: login_path, method: :post, data: { turbo: false }, local: true, class: "w-50 mx-auto" do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control"  %>
    </div>
    <%= form.submit "Log In", class: "btn btn-primary w-100" %>
  <% end %>

    <div class="mt-4 text-center">
     <%= link_to "Back to Home", root_path, class: "btn btn-outline-secondary me-2" %>
     <%= link_to "Sign Up", signup_path, class: "btn btn-outline-primary" %>
    </div>
</div>
